<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>I love you because...</th>
        <th></th>
      </tr>

      <% @reasons.each do |reason| %>
      <tr>
        <td><a href="/reasons/<%= reason.id %>"><%= reason.caption %></a></td>
        <td>
          <a href="/reasons/<%= reason.id %>/edit" class="btn btn-warning">Um, not quite</a>
          <a href="/delete_reason/<%= reason.id %>" class="btn btn-danger" rel="nofollow">Alternative fact</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
